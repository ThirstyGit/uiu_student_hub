<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Student Forum</title>
   <link rel="stylesheet" type="text/css" href="/css/index.css">
   <link rel="stylesheet" type="text/css" href="/css/style.css">
   <link rel="preconnect" href="https://fonts.gstatic.com">
   <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
</head>
<body>
   <nav>
      <ul>
         <li id="hamburger">&#9776;</li>
         <%if(user) {%>
            <li>
               <a href="/user/<%=user.id%>"><%=user.name%></a>
            </li>
         <%}%>
      </ul>
      <ul>
         <%if(user) {%>
            <li><a href="/logout">log out</a></li>
         <%} else {%>
            <li><a href="/login">log in</a></li>
         <%}%>
         <%if(user && user.type === "admin") {%>
            <li><a href="/admin">admin</a></li>
         <%}%>
         <li><a href="/posts">View all posts</a></li>
      </ul>
   </nav>
   <div class="sidebar sidebar-close">
      <h3>Please select a course</h3>
      <%result.forEach(data => {%>
         <a href="/course/<%=data.course_code.replace(/ /g, '_')%>"><h3><%=data.course_name%></h3></a>
      <%})%>
   </div>
   <div>
      <h1>Welcome to the student forum</h1>
      <a href="/createpost"><h3>Create a post.</h3></a>
   </div>
   <script type="text/javascript" src="js/index.js"></script>
</body>
</html>